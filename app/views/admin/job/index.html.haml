.single-container
  %h1
    仕事一覧

  = link_to '登録', new_admin_job_path, class: 'btn btn-success mb-3'

  %table.table.text-nowrap
    %thead.thead-light
      %tr
        %th.col-7
          仕事
        %th.col-5
    %tbody
      - @jobs.each do |job|
        %tr
          %td
            = job.name
          %td
            = link_to '編集', edit_admin_job_path(job.id), class: 'btn btn-outline-dark'
            = link_to '削除', admin_job_path(job.id), method: :delete, data: {confirm: '削除しますか？'}, class: 'btn btn-danger'
      
      = link_to "管理者ページ", admin_index_path, class: ""