%h2 
  = t('change_your_password')
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  = render "users/shared/error_messages", resource: resource
  = f.hidden_field :reset_password_token
  .field
    = f.label :password, t('.new_password')
    %br/
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
      %br/
    = f.password_field :password, autofocus: true, autocomplete: t('.new_password')
  .field
    = f.label :password_confirmation, t('.confirm_new_password')
    %br/
    = f.password_field :password_confirmation, autocomplete: t('.new_password')
  .actions
    = f.submit t('.change_my_password')
= render "users/shared/links"
